{
  "compilerOptions": {
    "jsx": "react-jsx",

    // ES features
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,

    // bundling
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "customConditions": ["source"],

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@docs/*": ["./docs/src/*"],
      "@docs/styled-system/*": ["./docs/styled-system/*"],
      "@nimbus/core/*": ["./packages/core/src/*"],
      "@nimbus/hooks/*": ["./packages/hooks/src/*"],
      "@nimbus/preset/*": ["./packages/preset/src/*"]
    }
  },
  "include": ["packages", "docs", "@types", "vitest.config.ts", "vitest.setup.ts"]
}
