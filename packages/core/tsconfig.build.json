{
  // This config is only for emitting declaration files
  // Tsup is used for transpiling TS source files
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["src/**/*.stories.tsx", "src/**/__tests__"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./lib",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "customConditions": []
  }
}
