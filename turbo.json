{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["esm/**", "cjs/**", "lib/**", "panda/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "pack:local": {
      "outputs": ["**/*.tgz"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#dev:storybook": {
      "cache": false,
      "persistent": true
    },
    "dev:docs": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "pack:clean": {
      "cache": false
    }
  }
}
